@page "/billform" 
@inherits BillFormBase

<h3>Bill Entry</h3>

<EditForm Model="@Bill" OnValidSubmit="AddBillEntry">
    <div class="form-group">
        <label for="exampleInputEmail1">Bill name</label>
        <InputText id="title" @bind-Value="@Bill.Name" placeholder="Bill name" />
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Amount</label>
        <InputNumber id="title" @bind-Value="@Bill.Amount" placeholder="Amount" />
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Description</label>
        <InputText id="title" @bind-Value="@Bill.Description" placeholder="Description" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>
