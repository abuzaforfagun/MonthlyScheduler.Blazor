            </div>
            <div class="modal-body">
                <MonthlyBillScheduler.Server.Components.BillFormCore.BillFormCore @ref="BillFormDialogCore" SaveEventCallBack="@SaveEntry"></MonthlyBillScheduler.Server.Components.BillFormCore.BillFormCore>
            </div>
        </div>
